<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="357.0" prefWidth="720.0" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="357.0" prefWidth="720.0">
         <children>
            <Button fx:id="botonEditar" layoutX="18.0" layoutY="23.0" mnemonicParsing="false" onAction="#leerContenido" prefHeight="50.0" prefWidth="130.0" text="Editar contenido" textAlignment="CENTER" wrapText="true" />
            <Button fx:id="botonCopiar" layoutX="158.0" layoutY="23.0" mnemonicParsing="false" onAction="#copiarArchivo" prefHeight="50.0" prefWidth="130.0" text="Copiar archivo" textAlignment="CENTER" wrapText="true" />
            <Button fx:id="botonCntPalabras" layoutX="296.0" layoutY="23.0" mnemonicParsing="false" onAction="#contarPalabras" prefHeight="50.0" prefWidth="130.0" text="Contar palabras" textAlignment="CENTER" wrapText="true" />
            <Button fx:id="botonCifrar" layoutX="573.0" layoutY="23.0" mnemonicParsing="false" onAction="#cifrarArchivo" prefHeight="50.0" prefWidth="130.0" text="Cifrar archivo" textAlignment="CENTER" wrapText="true" />
            <Button fx:id="botonCntVocales" layoutX="434.0" layoutY="23.0" mnemonicParsing="false" onAction="#contarVocales" prefHeight="50.0" prefWidth="130.0" text="Contar vocales" textAlignment="CENTER" wrapText="true" />
            <TextArea fx:id="txtResultado" layoutX="18.0" layoutY="84.0" prefHeight="118.0" prefWidth="685.0" text="(Aquí aparecerán los resultados de la operación o los datos escritos en el fichero)" wrapText="true" />
            <Button fx:id="btnGuardar" layoutX="158.0" layoutY="215.0" mnemonicParsing="false" onAction="#escribeContenido" prefHeight="25.0" prefWidth="130.0" style="-fx-background-color: green;" text="Guardar" textAlignment="CENTER" textFill="WHITE" visible="false">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnCancelar" layoutX="296.0" layoutY="215.0" mnemonicParsing="false" onAction="#cancelaEdicion" prefHeight="25.0" prefWidth="130.0" style="-fx-background-color: red;" text="Cancelar" textAlignment="CENTER" textFill="WHITE" visible="false" />
            <Label fx:id="etiNombre" layoutX="18.0" layoutY="253.0" prefHeight="17.0" prefWidth="685.0" text="Nombre: (Nombre del archivo)" textAlignment="CENTER" textFill="#868686" wrapText="true" />
            <Label fx:id="etiExtension" layoutX="18.0" layoutY="331.0" prefHeight="17.0" prefWidth="685.0" text="Extensión: (Extensión del archivo)" textAlignment="CENTER" textFill="#868686" wrapText="true" />
            <Label fx:id="etiUltimaMod" layoutX="18.0" layoutY="292.0" prefHeight="17.0" prefWidth="685.0" text="Última modificación: (Extensión del archivo)" textAlignment="CENTER" textFill="#868686" wrapText="true" />
            <Label fx:id="etiTamano" layoutX="18.0" layoutY="312.0" prefHeight="17.0" prefWidth="685.0" text="Tamaño: (Tamaño en kilobytes del archivo o carpeta)" textAlignment="CENTER" textFill="#868686" wrapText="true" />
            <Label fx:id="etiRuta" layoutX="18.0" layoutY="272.0" prefHeight="17.0" prefWidth="685.0" text="Ruta absoluta: (Ruta completa al archivo)" textAlignment="CENTER" textFill="#868686" textOverrun="CLIP" wrapText="true" />
            <Button fx:id="btnDetalles" layoutX="434.0" layoutY="215.0" mnemonicParsing="false" onAction="#verDetallesDirectorio" prefHeight="25.0" prefWidth="268.0" text="Ver detalles de directorio" textAlignment="CENTER" wrapText="true" />
            <Button fx:id="btnNuevo" layoutX="18.0" layoutY="215.0" mnemonicParsing="false" onAction="#nuevoArchivo" prefHeight="25.0" prefWidth="130.0" text="Nuevo archivo" />
         </children>
      </Pane>
   </children>
</GridPane>
